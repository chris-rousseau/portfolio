{% extends 'admin_blog.html.twig' %}

{% block title %}Tous les tags{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container px-4 mx-0">
		<h1 class="mt-4">Tous les tags</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item">
				<a href="{{ path('admin_dashboard') }}">Dashboard</a>
			</li>
			<li class="breadcrumb-item active">Blog</li>
			<li class="breadcrumb-item active">Tous les tags</li>
		</ol>
		<div class="card mb-4">
			<div class="card-body">
				<p class="mb-0">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">Nom</th>
									<th scope="col">Actions</th>
								</tr>
							</thead>
							<tbody>
							{% for tag in allTags %}
								<tr>
									<th scope="row">{{ tag.name }}</th>
									<td><a class="btn btn-danger" href="{{ path('admin_tags_delete', {id : tag.id}) }}" role="button" onclick="return confirm('Etes-vous sur de vouloir supprimer l\'article ?');"><i class="far fa-trash-alt"></i> Supprimer</a></td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>
				</p>
				<div class="navigation">
                    {{ knp_pagination_render(allTags) }}
                </div>
			</div>
		</div>
	</div>
{% endblock %}
